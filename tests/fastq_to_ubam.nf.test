nextflow_pipeline {

    name "Test fastq to uBam"
    script "fastq_to_ubam.nf"
    tag "pipeline"

    test("fastq to uBam workflow - paired-end") {
        when {
            params.input_glob = "$projectDir/tests/fixtures/fastq/emseq-test*{.ds.1,.ds.2}.fastq.gz"
        }

        then {
            def ubam = bam("${launchDir}/ubam/emseq-test1.bam").getStatistics()

            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.trace,
                    ["ubam", ubam],
                ).match()
            }
        )
        }
    }

    test("fastq to uBam workflow - single-end") {
        when {
            params.input_glob = "$projectDir/tests/fixtures/fastq/emseq-test*.ds.1.fastq.gz"
            params.read_format = 'single-end'
        }

        then {
            def ubam = bam("${launchDir}/ubam/emseq-test1.ds.1.bam").getStatistics()

            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.trace,
                    ["ubam", ubam],
                ).match()
            }
        )
        }
    }
}
