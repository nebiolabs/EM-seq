conda.enabled = true

process {
    // NEB cluster options
    clusterOptions = { "-V -S /bin/bash -R y -l ram=${task.memory ? task.memory.toGiga() : task.cpus*7}G" }
    penv     = 'smp'
    executor = 'sge'

    withLabel: high_cpu {
        cpus   = 16
        memory = '64GB'
        errorStrategy = 'retry'
    }

    withLabel: medium_cpu {
        cpus   = 2
        memory = '15GB'
        errorStrategy = 'retry'
    }
}
params {
    path_to_ngs_agg = "/mnt/bioinfo/prg/ngs-aggregate_results/current/"
}